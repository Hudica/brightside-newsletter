# Mapping of categories to numerical labels
label_map = {'positive': 1, 'negative': 0, 'neutral': 2}

# Prepare lists for headlines and labels
all_headlines = []
all_labels = []

# Append each headline and its corresponding label to the lists
for category in headlines:
    for headline in headlines[category]:
        all_headlines.append(headline)
        all_labels.append(label_map[category])

# Create DataFrame
df = pd.DataFrame({
    'headline': all_headlines,
    'label': all_labels
})

# Save the DataFrame to a CSV file
csv_path = 'data.csv'
df.to_csv(csv_path, index=False)

print("CSV file has been saved to:", csv_path)